<div class='row'>
  <div class='col-xs-3'>
    <h2>User info</h2>
    <%= render 'users/info', user: current_user %>

    <h2>New book</h2>
    <%= render 'form', book: @book %>
  </div>

  <div class='col-xs-9'>
    <h2>Books</h2>
    <%= link_to '新しい順', books_path(latest: "true") %> | 
    <%= link_to '評価の高い順', books_path(star_count: "true") %>

    <%= render 'index', books: @books%>
  </div>
</div>
