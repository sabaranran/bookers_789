<div class="container">
  <div class="row">
    <div class="mx-auto">
      <h2>Event Mail</h2>
      <%= form_with url: group_send_mail_path(@group), method: :get, local: true do |f| %>
        <div>
          <%= f.label :title %>
          <%= f.text_field :mail_title %>
        </div>
        <div>
          <%= f.label :content %>
          <%= f.text_area :mail_content %>
        </div>
        <div>
          <%= f.submit '送信',class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>