<div class="container">
  <div class="row">
    <div class="col-mad-3">
      <h2>User info</h2>
      <%= render 'users/info', user: @user %>

      <h2>New book</h2>
      <%= render 'books/form', book: @book %>
    </div>
    <div class="col-md-9">
      <h2>Group Detail</h2>
      <table class="table">
        <thead>
          <tr>
            <th>グループ名</th>
            <th>紹介文</th>
            <th>メンバー</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>
              <% if @group.group_image.attached? %>
                <%= image_tag @group.group_image,size: "50x50" %>
              <% else %>
                <%= image_tag 'no_image', size: "50x50" %>
              <% end %>
            </td>
            <td><%= @group.name %></td>
            <td><%= @group.introduction %></td>
            <td>
              <%= @owner.name %>
              <% @group.users.each do |user| %>
                <li style="list-style:none;"><%= user.name %></li>
              <% end %>
            </td>
            <% if @group.owner_id == current_user.id %>
            <td>
              <%= link_to 'Edit', edit_group_path(@group),class: "btn btn-success" %>
            </td>
            <% elsif @group.include_user?(current_user) %>
              <td>
                <%= link_to 'Leave this group', group_group_users_path(@group),method: :delete,class: "btn btn-danger" %>
              </td>
            <% else %>
              <td>
                <%= link_to 'Join this group', group_group_users_path(@group),method: :post,class: "btn btn-success" %>
              </td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
