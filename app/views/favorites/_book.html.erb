<% if book.favorited_by?(user) %>
  <%= link_to book_favorites_path(book), method: :delete, remote: true, data: { book_id: book.id } do %>
    <span class="fa-solid fa-heart"><%= book.favorites.count %></span>
  <% end %>
<% else %>
  <%= link_to book_favorites_path(book), method: :post, remote: true, data: { book_id: book.id } do %>
    <span class="fa-regular fa-heart"><%= book.favorites.count %></span>
  <% end %>
<% end %>